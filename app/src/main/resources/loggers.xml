<?xml version="1.0" encoding="UTF-8"?>
<beans default-lazy-init="true"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean name="consoleLogger" class="springConfTest.ConsoleEventLogger"/>

    <bean name="fileLogger" class="springConfTest.FileEventLogger" init-method="canWrite">
        <constructor-arg name="filename" value="app/src/main/java/springConfTest/log/file.log"/>
    </bean>

    <bean name="cacheFileLogger" class="springConfTest.CacheFileEventLogger" destroy-method="destroy"
          parent="fileLogger" c:size="5"/>

    <bean name="combined" class="springConfTest.CombinedEventLogger" c:loggesrs-ref="loglist"/>

    <util:list id="loglist">
        <ref bean="consoleLogger"/>
        <ref bean="fileLogger"/>
    </util:list>

</beans>